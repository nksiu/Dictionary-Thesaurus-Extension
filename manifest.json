{
"name": "Dictionary & Thesaurus Extension",
"version": "1.0",
"description": "Get the definition and synonynms of any word you are not familiar with",

"permissions": [
	"activeTab"
],

"content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }
],

"browser_action": {
	"default_popup": "popup.html",
	"default_icon": {
		"16": "images/book_icon16.png",
		"32": "images/book_icon32.png",
		"48": "images/book_icon48.png",
		"128": "images/book_icon128.png"

	}
},

"icons": {
		"16": "images/book_icon16.png",
		"32": "images/book_icon32.png",
		"48": "images/book_icon48.png",
		"128": "images/book_icon128.png"
},

"manifest_version": 2
}